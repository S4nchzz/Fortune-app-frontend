<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/app_lighter"/>
            <corners android:radius="10dp"/>
            <stroke android:color="@color/app_lighter" android:width="1dp"/>
        </shape>
    </item>

    <item>
        <shape>
            <solid android:color="@color/app_close_original"/>
            <corners android:radius="10dp"/>
            <stroke android:color="@color/app_lighter" android:width="1dp"/>
        </shape>
    </item>
</selector>