<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.view.auth.UProfileActivity"
        android:orientation="vertical"
        android:background="@drawable/bg">

    <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="Perfil"
            android:textColor="@color/white"
            android:textSize="50dp"
            android:textStyle="bold"
            android:layout_marginStart="50dp"
            android:layout_marginTop="50dp"/>

    <ImageView
            android:layout_weight="1"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/profile_default_profile_icon"
            android:layout_gravity="center"/>


    <LinearLayout
            android:layout_weight="5"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical">
        <EditText
                android:id="@+id/profile_name_data"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:hint="Nombre"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:textColorHint="@color/disabled1"/>

        <EditText
                android:id="@+id/profile_address_data"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:hint="DirecciÃ³n"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:textColorHint="@color/disabled1"/>

        <EditText
                android:id="@+id/profile_phone_data"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:hint="Telf"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:textColorHint="@color/disabled1"/>
    </LinearLayout>

    <Button
            android:id="@+id/btn_confirm_profile"
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="100dp"
            android:text="Confirmar"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold"
            android:backgroundTint="@color/white"/>

</LinearLayout>