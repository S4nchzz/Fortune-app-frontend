<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".auth.UserProfile"
        android:orientation="vertical"
        android:background="@drawable/bg">

    <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="Perfil"
            android:textColor="@color/white"
            android:textSize="50dp"
            android:textStyle="bold"
            android:layout_marginStart="50dp"
            android:layout_marginTop="50dp"/>

    <ImageView
            android:layout_weight="1"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/profile_default_profile_icon"
            android:layout_gravity="center"/>


    <EditText
            android:id="@+id/profile_name_data"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:inputType="textPassword"
            android:layout_gravity="center"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:hint="Nombre"
            android:textColorHint="@color/disabled1"/>

    <EditText
            android:id="@+id/profile_address_data"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:inputType="textPassword"
            android:layout_gravity="center"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:hint="DirecciÃ³n"
            android:textColorHint="@color/disabled1"/>

    <EditText
            android:id="@+id/profile_telf_data"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:inputType="number"
            android:layout_gravity="center"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:hint="Telf"
            android:textColorHint="@color/disabled1"/>

    <Button
            android:id="@+id/btn_confirm_pin"
            android:layout_weight="1"
            android:layout_width="200dp"
            android:layout_height="0dp"
            android:enabled="false"
            android:layout_gravity="center|top"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="50dp"
            android:text="Confirmar"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold"
            android:backgroundTint="@color/white"/>
</LinearLayout>