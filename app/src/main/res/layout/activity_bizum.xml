<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.view.app.BizumActivity"
        android:background="@color/app">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

            <ImageView
                    android:id="@+id/go_back"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/go_back_arrow"
                    android:contentDescription="Go back"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp" />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/disabled0"
                    android:text="Bizum"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

            <ImageButton
                    android:backgroundTint="@color/transparent"
                    android:id="@+id/slide_menu_button"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/menu_trigger_icon"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintEnd_toEndOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:orientation="vertical">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="35dp"
                    android:paddingBottom="35dp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:text="Bizums recientes"
                    android:textSize="22dp"/>
            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recent_bizums_rview"
                    android:layout_width="match_parent"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:layout_height="170dp"

                    android:orientation="horizontal"/>

            <LinearLayout
                    android:layout_marginTop="50dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="20dp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:text="Mas opciones"
                        android:textSize="22dp"/>

                <LinearLayout
                        android:id="@+id/send_bizum"
                        android:layout_width="match_parent"
                        android:layout_height="75dp"
                        android:gravity="center_vertical"
                        android:clickable="true"
                        android:background="@drawable/bizum_buttons_animation"
                        android:elevation="50dp"
                        android:layout_marginBottom="10dp">
                    <ImageView
                            android:clickable="false"
                            android:focusable="false"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/out_bizum"
                            android:padding="22dp"
                            android:contentDescription="Out bizum"/>

                    <LinearLayout
                            android:clickable="false"
                            android:focusable="false"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center_vertical">
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Enviar dinero"
                                android:textColor="@color/white"
                                android:textSize="20dp"/>

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Envio de dinero a un movil"
                                android:textColor="@color/disabled1"
                                android:textSize="15dp"/>
                    </LinearLayout>

                    <ImageView
                            android:clickable="false"
                            android:focusable="false"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/open_item_arrow_right"
                            android:contentDescription="Open item"
                            android:scaleType="fitCenter"
                            android:padding="25dp"/>
                </LinearLayout>
                <LinearLayout
                        android:id="@+id/ask_bizum"
                        android:layout_width="match_parent"
                        android:layout_height="75dp"
                        android:gravity="center_vertical"
                        android:clickable="true"
                        android:background="@drawable/bizum_buttons_animation"
                        android:elevation="50dp"
                        android:layout_marginBottom="10dp">
                    <ImageView
                            android:clickable="false"
                            android:focusable="false"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/in_bizum"
                            android:padding="22dp"
                            android:contentDescription="In bizum"/>

                    <LinearLayout
                            android:clickable="false"
                            android:focusable="false"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center_vertical">
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Solicitar dinero"
                                android:textColor="@color/white"
                                android:textSize="20dp"/>

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Solicitar dinero a un movil"
                                android:textColor="@color/disabled1"
                                android:textSize="15dp"/>
                    </LinearLayout>

                    <ImageView
                            android:clickable="false"
                            android:focusable="false"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/open_item_arrow_right"
                            android:contentDescription="Open item"
                            android:scaleType="fitCenter"
                            android:padding="25dp"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/view_requested_bizums"
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:gravity="center_vertical"
                    android:clickable="true"
                    android:background="@drawable/bizum_buttons_animation"
                    android:elevation="50dp">
                    <ImageView
                        android:clickable="false"
                        android:focusable="false"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/request_bizum_icon"
                        android:padding="22dp"
                        android:contentDescription="Request bizum"/>

                    <LinearLayout
                        android:clickable="false"
                        android:focusable="false"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center_vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ver solicitudes."
                            android:textColor="@color/white"
                            android:textSize="20dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ver solicitudes de bizum."
                            android:textColor="@color/disabled1"
                            android:textSize="15dp"/>
                    </LinearLayout>

                    <ImageView
                        android:clickable="false"
                        android:focusable="false"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/open_item_arrow_right"
                        android:contentDescription="Open item"
                        android:scaleType="fitCenter"
                        android:padding="25dp"/>
                </LinearLayout>


            </LinearLayout>
            </LinearLayout>
        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.App.BottomNavigationView"
            app:menu="@menu/bottom_menu"/>
        </LinearLayout>
    <com.google.android.material.navigation.NavigationView
            android:id="@+id/nav_view"
            android:layout_gravity="end"
            android:layout_width="270dp"
            android:layout_height="match_parent"
            app:menu="@menu/slide_menu"
            android:background="@color/app"
            app:itemTextColor="@color/disabled0"
            app:itemIconTint="@color/white"/>
</androidx.drawerlayout.widget.DrawerLayout>