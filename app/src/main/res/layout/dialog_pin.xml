<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:background="@drawable/rounded_shape">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/firma_digital"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:textColor="@color/disabled1"
            android:textSize="30dp"
            android:textStyle="bold"/>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|top">
        <EditText
                android:id="@+id/dialog_firma_box_1"
                android:layout_width="70dp"
                android:layout_height="100dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:inputType="number"
                android:hint="@string/guion"
                android:textColorHint="@color/disabled2"
                android:textSize="50dp"
                android:maxLength="1"
                android:textAlignment="center"/>
        <EditText
                android:id="@+id/dialog_firma_box_2"
                android:layout_width="70dp"
                android:layout_height="100dp"
                android:inputType="number"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:hint="@string/guion"
                android:textColorHint="@color/disabled2"
                android:textSize="50dp"
                android:maxLength="1"
                android:textAlignment="center"/>
        <EditText
                android:id="@+id/dialog_firma_box_3"
                android:layout_width="70dp"
                android:layout_height="100dp"
                android:inputType="number"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:hint="@string/guion"
                android:textColorHint="@color/disabled2"
                android:textSize="50dp"
                android:maxLength="1"
                android:textAlignment="center"/>
        <EditText
                android:id="@+id/dialog_firma_box_4"
                android:layout_width="70dp"
                android:layout_height="100dp"
                android:inputType="number"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:hint="@string/guion"
                android:textColorHint="@color/disabled2"
                android:textSize="50dp"
                android:maxLength="1"
                android:textAlignment="center"/>
        <EditText
                android:id="@+id/dialog_firma_box_5"
                android:layout_width="70dp"
                android:layout_height="100dp"
                android:inputType="number"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:hint="@string/guion"
                android:textColorHint="@color/disabled2"
                android:textSize="50dp"
                android:maxLength="1"
                android:textAlignment="center"/>
    </LinearLayout>

    <Button
            android:id="@+id/sign_operation"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:enabled="false"
            android:layout_gravity="center|top"
            android:text="Firmar"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold"
            android:backgroundTint="@color/disabled1"/>

</LinearLayout>